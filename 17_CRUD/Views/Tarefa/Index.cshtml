@model List<Tarefa>

<h1>Lista de tarefas</h1>
<table class="table">
    <thead>
        <tr>
            <th>Tarefa</th>
            <th>Concluida</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Descricao</td>
                <td>@(tarefa.Concluida == true ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@tarefa.Id" class="btn btn-outline-dark">Editar</a>
                    <a asp-action="Deletar" asp-route-id="@tarefa.Id" class="btn btn-outline-dark">Deletar</a>
                </td>
            </tr>
       }
    </tbody>
</table>

<a asp-action="Adicionar" class="btn btn-outline-dark">Adicionar Nova Tarefa</a>
