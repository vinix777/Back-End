@model IEnumerable<_18_CRUD_BD.Models.Jogo>

@{
    ViewData["Title"] = "Index";
}

<div class="d-grid justify-content-center">
<h1 class="mb-3">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-dark mb-4">Create New</a>
</p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JogoId" class="btn btn-outline-secondary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.JogoId" class="btn btn-outline-secondary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.JogoId" class="btn btn-outline-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-lg-3 ">
            <div class="card " >
                <img class="card-img-top " src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Imagem de capa do card">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <a href="#" class="btn btn-primary ">Saiba mais</a>
                </div>
            </div>
        </div>

    }
</div>